<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hi_depok.hi_depok.Sikepok_RS.rs_terdekat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/drawer_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/activity_maps_rs" />

            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:font="@string/fontBold"
                    style="@style/tulisanPutih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rumah Sakit terdekat dari lokasi anda"
                    android:textSize="@dimen/article_desc" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:font="@string/fontReguler"
                    style="@style/tulisanAbu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Click untuk melihat informasi lainnya"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <fr.arnaudguyon.smartfontslib.FontButton
                        app:font="@string/fontBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape3"
                        android:onClick="ke_daftar_rs"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Cari Rumah Sakit Lain"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>