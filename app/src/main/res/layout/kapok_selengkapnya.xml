<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context="com.hi_depok.hi_depok.Kapok.activity_selengkapnya">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Tempat"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

        </android.support.v4.view.ViewPager>


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:backgroundTint="#fff"
            android:layout_centerInParent="true"
            android:numStars="5"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:rating="3"
            android:layout_gravity="center"
            android:theme="@style/RatingBar"
            android:layout_weight="1" />

       <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffff"
            android:textSize="15sp"
            android:text="Deskripsi Detail" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:text="Lorem ipsum dolor sit amet, cu eos dolor adolescens, ex nec error virtute assentior, pri ut paulo definitionem. Vel ea dico dolores volutpat, ut per laboramus sententiae. Simul tibique reprimique ea mea. Ei consequat constituam his, laudem interesset definitionem nec in."
            android:textColor="#ffff" />

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Operasional"
                android:textColor="#fff"
                android:layout_weight="1.36"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_weight="1.61"
                android:textColor="#fff"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07.00"
                android:textColor="#fff"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="s/d"
                android:textColor="#fff"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.00"
                android:textColor="#fff"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Alamat "
                android:textColor="#fff"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.7"
                android:textColor="#fff"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Cempaka Indah No.01"
                android:gravity="right"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu Andalan "
                android:textColor="#fff"
                android:layout_weight="1"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=":"

                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasi Kucing"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="14sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/button"
            android:background="@drawable/shape3"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Yuk Kesana"
            android:onClick="toMaps"
            android:textStyle="bold"/>

        <View
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="#ffff"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Tambah Ulasan"
                android:textColor="#fff"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:onClick="tambah"
                android:id="@+id/tambah"
                android:src="@android:drawable/ic_menu_add" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ulasan Terbaru"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <TextView
            android:id="@+id/ulasan"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Lihat Ulasan Lainnya>>" />

    </LinearLayout>

</ScrollView>
</FrameLayout>