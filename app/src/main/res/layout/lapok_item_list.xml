<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:elevation="99dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/avatar"
                android:src="@drawable/profile"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar"
                android:text="Fajar Zakaria"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb 8, 2017 at 17.00 WIB"
                android:layout_toRightOf="@+id/avatar"
                android:layout_below="@+id/username"
                android:textSize="12sp"
                android:textColor="#b7b7b7"/>

            <ImageView
                android:id="@+id/seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/seen"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="40dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/jumlah_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:text="293"
                android:textSize="16sp"
                android:textColor="#303030"
                android:gravity="right"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:scaleType="centerCrop"
            tools:src="@drawable/lapok_image_3" />

        <TextView
            android:id="@+id/card_title"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_alignBottom="@+id/card_image"
            tools:text="Jalan Macet"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_image"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_marginTop="@dimen/md_keylines"
            android:layout_marginBottom="@dimen/md_keylines"
            android:layout_marginRight="@dimen/md_keylines"
            tools:text="Macet dijalan juanda, udah berjamjam nih stuck disini"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#303030"
            android:textSize="@dimen/article_subheading" />


        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            app:srcCompat="@drawable/like"
            android:layout_below="@+id/card_text"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/jumlah_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="293"
            android:textSize="18sp"
            android:layout_below="@+id/card_text"
            android:textColor="#303030"
            android:layout_toRightOf="@id/favorite_button"/>

        <ImageButton
        android:id="@+id/comment_button"
        android:layout_width="@dimen/cards_button_width"
        android:layout_height="@dimen/cards_button_height"
        app:srcCompat="@drawable/comment"
        android:layout_below="@+id/card_text"
        android:layout_toRightOf="@id/jumlah_like"
        style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:id="@+id/jumlah_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="17"
            android:textSize="18sp"
            android:layout_below="@+id/card_text"
            android:textColor="#303030"
            android:layout_toRightOf="@id/comment_button"/>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="@dimen/cards_button_width"
            android:layout_height="@dimen/cards_button_height"
            app:srcCompat="@drawable/share"
            android:layout_below="@+id/card_text"
            android:layout_toRightOf="@+id/jumlah_comment"
            style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:id="@+id/jumlah_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="8"
            android:textSize="18sp"
            android:layout_below="@+id/card_text"
            android:textColor="#303030"
            android:layout_toRightOf="@id/share_button"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>