<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/avatar"
                android:text="Fajar Zakaria"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/avatar"
                android:text="Feb 8, 2017 at 17.00 WIB"
                android:textColor="#b7b7b7"
                android:textSize="12sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"
                android:scaleType="centerCrop"
                tools:src="@drawable/lapok_image_3"
                />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_title_height"
                android:layout_alignBottom="@+id/card_image"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#fff"
                tools:text="Jalan Macet"/>

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_image"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="@dimen/md_keylines"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_marginTop="@dimen/md_keylines"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#303030"
                android:textSize="@dimen/article_subheading"
                tools:text="Macet dijalan juanda, udah berjamjam nih stuck disini"/>


            <ImageButton
                android:id="@+id/like"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_below="@+id/card_text"
                app:srcCompat="@drawable/like"/>

            <TextView
                android:id="@+id/jumlah_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/like"
                android:text="293"
                android:textColor="#303030"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/comment_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_below="@+id/card_text"
                android:layout_toRightOf="@id/jumlah_like"
                app:srcCompat="@drawable/comment"/>

            <TextView
                android:id="@+id/jumlah_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/comment_button"
                android:text="17"
                android:textColor="#303030"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/share_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_below="@+id/card_text"
                android:layout_toRightOf="@+id/jumlah_comment"
                app:srcCompat="@drawable/share"/>

            <TextView
                android:id="@+id/jumlah_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/share_button"
                android:text="8"
                android:textColor="#303030"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/newrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl">

            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/send"
                android:text="KIRIM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/comment"/>
            <TextView
                android:id="@+id/labelKomentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send"/>

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>