<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        app:font="@string/fontReguler"
                        android:id="@+id/jenis_lain_volunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:hint="Jenis Volunteer"
                        android:imeOptions="actionUnspecified"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColorHint="#b7b7b7"
                        android:textColorLink="#b7b7b7"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        app:font="@string/fontReguler"
                        android:id="@+id/nama_volunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:hint="Nama"
                        android:imeOptions="actionUnspecified"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColorHint="#b7b7b7"
                        android:textColorLink="#b7b7b7"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        app:font="@string/fontReguler"
                        android:id="@+id/tlp_volunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:hint="Telepon"
                        android:imeOptions="actionUnspecified"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColorHint="#b7b7b7"
                        android:textColorLink="#b7b7b7"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:focusableInTouchMode="true">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        app:font="@string/fontReguler"
                        android:id="@+id/keahlian_volunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:hint="Keahlian"
                        android:imeOptions="actionUnspecified"
                        android:inputType="none"
                        android:maxLines="1"
                        android:textColorHint="#b7b7b7"
                        android:textColorLink="#b7b7b7"
                        android:textSize="18sp" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp">

                    <fr.arnaudguyon.smartfontslib.FontButton
                        app:font="@string/fontBold"
                        android:id="@+id/btn_volunteer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape3"
                        android:text="Daftar"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>