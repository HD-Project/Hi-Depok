<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_list">

    <fr.arnaudguyon.smartfontslib.FontTextView
        app:font="@string/fontBold"
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Apakah Anda yakin ingin keluar dari\naplikasi Hi-Depok?"
        android:textColor="@color/background"
        android:textSize="@dimen/list_body"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/abuAbu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <fr.arnaudguyon.smartfontslib.FontButton
            app:font="@string/fontBold"
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Ya"
            android:textColor="@color/primary"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/abuAbu"/>

        <fr.arnaudguyon.smartfontslib.FontButton
            app:font="@string/fontBold"
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clickable="true"
            android:text="Tidak"
            android:textColor="@color/primary"/>
    </LinearLayout>

</LinearLayout>