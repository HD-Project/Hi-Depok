<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/pict"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/doctor" />

        <TextView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pict"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Kenali Gejala Penyakitmu"
            android:textColor="#fff"
            android:textSize="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/strip2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#717171" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2500dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/diagnosa"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="link_diagnosa"
                android:src="@drawable/diagnosa_large" />

            <ImageView
                android:id="@+id/book"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="link_ensiklopedi"
                android:src="@drawable/book" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/profile"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Diagnosa"
                android:onClick="link_diagnosa"
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/history"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Ensiklopedi"
                android:onClick="link_ensiklopedi"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
