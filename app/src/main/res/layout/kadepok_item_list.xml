<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/shape_bg_list">

        <ImageView
            android:id="@+id/list_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_action_home4" />

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:font="@string/fontBold"
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/md_keylines"
            android:layout_toEndOf="@+id/list_avatar"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/article_subheading"
            android:textStyle="bold"
            tools:text="Nama Panti" />

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:font="@string/fontReguler"
            android:id="@+id/list_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_title"
            android:layout_marginStart="@dimen/md_keylines"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/list_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/list_body"
            tools:text="Alamat" />

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:font="@string/fontReguler"
            android:id="@+id/list_telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_alamat"
            android:layout_marginStart="@dimen/md_keylines"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/list_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/article_desc"
            tools:text="No. Telepon" />

    </RelativeLayout>

</LinearLayout>