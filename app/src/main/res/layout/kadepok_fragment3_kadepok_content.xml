<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/jumlah_anak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panti asuhan Darul Ilmi memiliki 55 anak"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jumlah_anak"
                android:text="Dengan 40 Laki-laki dan 15 Perempuan"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_daftar_anak"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/jk"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape3"
                android:text="Daftar Anak"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#b7b7b7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panti asuhan Darul Ilmi memiliki Beberapa Event"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/event2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event"
                android:text="Seperti event tahunan ataupun event pada hari besar"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_daftar_event"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/event2"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape3"
                android:text="Daftar Event"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:textSize="12sp" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>