<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.hi_depok.hi_depok.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.7">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo2"
                    android:id="@+id/imageView2"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:text="Hi-Depok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:textSize="36sp"
                        android:textStyle="normal|bold"
                        android:textColor="#6B92CB"
                        android:gravity="bottom|center_vertical|center_horizontal"
                        android:layout_weight="0.18" />

                    <TextView
                        android:text="We Share We Care"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textSize="20sp"
                        android:textStyle="normal|italic"
                        android:layout_weight="0.1"
                        android:textColor="#F6981A"
                        android:paddingLeft="0dp"
                        android:gravity="top|center_vertical|center_horizontal" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/wv"
                        android:textColor="#515050"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed"
                        android:background="@drawable/shape2"
                        android:text="Watch Video"
                        android:minHeight="0dp"
                        android:drawableLeft="@drawable/ic_action_play_circle_filled"
                        android:textSize="14sp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_horizontal|fill" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:text="Pilih modul yang ingin dijalankan!"
                android:layout_weight="0.01"
                android:gravity="bottom" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:text="SiKepok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sikepok"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="#515050"
                    android:background="@drawable/shape2"
                    android:onClick="linkSikepok"
                    android:drawableLeft="@mipmap/sikepok" />

                <Button
                    android:text="KaDepok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kadepok"
                    android:textAllCaps="false"
                    android:textColor="#515050"
                    android:background="@drawable/shape2"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/kadepok"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01">

                <Button
                    android:text="Lapok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lapok"
                    android:textColor="#515050"
                    android:textAllCaps="false"
                    android:background="@drawable/shape2"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/lapok" />

                <Button
                    android:text="Kapok"
                    android:textColor="#515050"
                    android:textAllCaps="false"
                    android:background="@drawable/shape2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kapok"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/kapok"
                    android:onClick="linkkapok"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01">

                <Button
                    android:text="Ucok"
                    android:layout_width="wrap_content"

                    android:textAllCaps="false"
                    android:background="@drawable/shape2"
                    android:layout_height="wrap_content"
                    android:id="@+id/ucok"
                    android:layout_weight="0.69"
                    android:drawableLeft="@mipmap/ucok" />

                <Button
                    android:text="About"
                    android:layout_width="wrap_content"
                    android:textColor="#515050"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:id="@+id/about"
                    android:layout_weight="0.7"
                    android:background="@drawable/shape2"
                    android:drawableLeft="@drawable/ic_action_info"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="18dp"
                    android:paddingTop="17dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
