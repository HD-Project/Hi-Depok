<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageArtist"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="-5dp"
            android:padding="10dp"
            android:src="@drawable/emma_roberts"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA"
            android:id="@+id/nameTxt"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageArtist"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 8, 2017, at 17.00 WIB"
            android:id="@+id/timeTxt"
            android:layout_toRightOf="@+id/imageArtist"
            android:layout_below="@+id/nameTxt"/>

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/kemacetan"
                />

            <TextView
                android:id="@+id/card_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_image"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#303030"
                android:textSize="20sp"
                tools:text="Macet dijalan juanda, udah berjamjam nih stuck disini"/>


            <ImageButton
                android:id="@+id/like"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/card_text"
                app:srcCompat="@drawable/like"/>

            <TextView
                android:id="@+id/jumlah_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/like"
                android:text="0"
                android:textColor="#303030"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/comment_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/card_text"
                android:layout_toRightOf="@id/jumlah_like"
                app:srcCompat="@drawable/comment"/>

            <TextView
                android:id="@+id/jumlah_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/comment_button"
                android:text="0"
                android:textColor="#303030"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/share_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/card_text"
                android:layout_toRightOf="@+id/jumlah_comment"
                app:srcCompat="@drawable/share"/>

            <TextView
                android:id="@+id/jumlah_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_text"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/share_button"
                android:text="0"
                android:textColor="#303030"
                android:textSize="18sp"/>

        </RelativeLayout>


    </RelativeLayout>




</android.support.v7.widget.CardView>